<header>
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
  <fieldset>
    <ol>
      <li class="required">
        <%= label_tag :email, "Username or Email" %>
        <%= text_field_tag :email, nil, autofocus: true, size: 40, required: true  %>
      </li>
      <li class="required">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, size: 40, required: true %>
      </li>
      <p>
        <%= submit_tag "Sign In" %>
      </p>
    </ol>
  </fieldset>
  <p>
    No account yet? <%= link_to 'Sign up!', signup_path %>
  </p>
<% end %>
